@import '../../utilities/vars'
@import '../../utilities/mixins'

/* IMAGES */
img
  margin 23px 0 18px

.img-social
  width 100%
  max-width 359px
  margin 75px 0 40px
  box-shadow: 0px 4px 52px 0px rgba(0,0,0,0.15);
  +mobile()
    max-width unset
    box-shadow none

.img-social2
  margin-top 0
  margin-bottom 40px
  width 100%
  max-width 359px
  box-shadow: 0px 4px 52px 0px rgba(0,0,0,0.15);
  +mobile()
    max-width unset
    box-shadow none

.img-visual
  position absolute
  bottom 0
  right 10%
  margin 0
  +portrait()
    max-width 360px
    width 100%
    right 0
  +mobile()
    right 0
    max-width 330px

.img-evod
  width 100%
  margin 0
  +mobile()
    margin-top 35px

.img-standarts
  width 100%
  margin 0 auto
  max-width 714px
  display block
  position relative
  top 12px
  left -14px

.img-king-container
  position absolute
  left -78px
  bottom -42px
  max-width 493px
  +tablet()
    max-width 400px
    bottom -30px
    left -74px
  +portrait()
    max-width 400px
    left -44px
    bottom -30px
  +mobile()
    max-width 350px
    bottom -30px
    z-index 1
  img
    width 100%
    margin 0

.img-text
  max-width: 500px;
  width 100%
  margin 50px 0 0

.movement
  margin-top 4px
  margin-bottom 30px
  //.bubble
  //  fill $purple
  +mobile()
    width 100%
    margin-bottom 10px
  +landscape()
    width auto

.img-responsive
  width 100%

.img-component
  margin 0
  position relative
  left -22%
  z-index 1
  +portrait()
    left -84%
  +landscape()
    position absolute
    bottom -50px
    left auto
    right -50%

.img-statistic
  +mobile()
    width 100%